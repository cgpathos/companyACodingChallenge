<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="today.pathos.companya.codingtest.presentation.viewmodel.MainViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.FavoriteFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:listData="@{vm.favorite}"
            app:spanCount="2"
            tools:itemCount="3"
            tools:listitem="@layout/item_thumbnail" />

    </FrameLayout>
</layout>
